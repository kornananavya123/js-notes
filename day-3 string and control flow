//1.Data type Strings

//methoad: predefined rule - that will give us result based on our input

length
toUpperCase()
toLowerCase()

//strings

let myname = 'this is my name12';
// to find the length of the string
console.log(myname.length)

//to make uppercase and lowercase
console.log(myname.toUpperCase())
let name1 = 'WWWWWWW HAI HEELO';
console.log(name1.toLowerCase());

//trim  - to remove leading and trailing whitespace
let text = '      hey how are you hello          ';
console.log(text.trim());

console.log(text.trimStart());


console.log(text.trimEnd());

// concat - adding a string into another string
let text1 = 'hellow good';
console.log(text1.concat(' Morning'));


//charAt()

// console.log(text1.charAt(5));

// console.log(text1.charCodeAt(5));


//slice
let text2 = '123456789';

let result = text2.slice(-12,-4);
console.log(result);

let result1 = text2.substring(2,7);

console.log(result1);


let result3 = text2.substr(2, 5);

console.log(result3);


