//map
//map will return new array with updated values
let classroom = [100,200,300,400,125,116]
let newArray =classroom.map(mapfun)
 function mapfun(val,index,wholearray){
    if(100 >=250){
        return  val + 50;
    }else{
        return 100 - 10;
    }
}
console.log('old',classroom)
console.log('newArray',newArray)





