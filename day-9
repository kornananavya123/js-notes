user defined function:

function sum() {

}


function hoisting:

function declarations are hoisted at the top






//default parameters
function sum(a=10, b=2) {

  return a + b;
}

let result = sum(12 , 10);

console.log(result);


function sayHai(name='Raju', city='delhi') {
  return 'hello ' + name + ' ' + city;
}

let res = sayHai('Naveen');

console.log(res);


